@page "/cardcollectionsubmithandler"

@using AdaptiveCards.Blazor.Samples.Data
@inject WeatherForecastService ForecastService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @if (selectedForecast != null && !string.IsNullOrWhiteSpace(submittedTo))
    {
        <b>@selectedForecast.Date.ToShortDateString(): </b> @submittedTo
    }

    <CardCollection SubmitHandler="this" CardClass="col-6" Models="@forecasts" Schema="@schema"></CardCollection>
}

@code {
    WeatherForecast[] forecasts;
    string schema;
    WeatherForecast selectedForecast = null;
    string submittedTo = null;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await ForecastService.GetForecastAsync(DateTime.Now);
        schema = System.IO.File.ReadAllText("WeatherSchemaTemplate.json");
    }

    public Task Submit(WeatherForecast model, string emailAddress, TemplatedAdaptiveCard card)
    {
        submittedTo = emailAddress;
        selectedForecast = model;

        card.ShouldReRender = true;

        StateHasChanged();
        return Task.CompletedTask;
    }
}
